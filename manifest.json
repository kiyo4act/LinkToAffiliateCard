{
    "manifest_version": 3,
    "name": "Blog Card Builder",
    "version": "1.0.0",
    "description": "Amazon/AliExpress/Sunstella対応 汎用商品リンクカード作成ツール",
    "permissions": [
        "sidePanel",
        "activeTab",
        "storage",
        "scripting"
    ],
    "side_panel": {
        "default_path": "src/pages/sidepanel/index.html"
    },
    "background": {
        "service_worker": "src/background/index.ts",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "src/content/index.ts"
            ]
        }
    ],
    "action": {
        "default_title": "Open Blog Card Builder"
    }
}